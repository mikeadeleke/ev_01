

<%= link_to "Add a new Playlist", new_playlist_path %>

<% @playlists.each do |playlist| %>
<div class="status">
<strong><%= link_to playlist.name, playlist %></strong>
<div class="meta">
  <span class="admin">
    | <%= link_to "Edit", edit_playlist_path(playlist) %> |
    <%= link_to "Delete", playlist, method: :delete, data: { confirm: "Are you sure you want to delete this playlist?"} %>
</span>
</div>
</div>
<br>
 <% end %>

